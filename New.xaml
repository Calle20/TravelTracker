<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelTracker.New"
             Title="New">
    <VerticalStackLayout>
        <Label 
            Text="Add new travel"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="Large"/>
        <Entry            
            Placeholder="Name"/>
        <Button
            Text="Fill automatically"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="OnFillAutomaticallyClicked" />
        <Entry
            Placeholder="Longitude"
            />
        <Entry
            Placeholder="Latidude"/>
        <Entry
            Placeholder="Country"/>

        <Button
            Text="Add New Travel"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="OnAddNewTravelClicked" />
    </VerticalStackLayout>
</ContentPage>