<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelTracker.New"
             Title="New">
    <VerticalStackLayout>
        <Label 
            Text="Add new travel"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="Large"/>
        <Entry            
            Placeholder="Name"
            TextChanged="OnTextChanged"
            x:Name="StartStation"/>
        
        <CollectionView x:Name="SuggestionsList" SelectionMode="Single" SelectionChanged="OnItemSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding}" Padding="10" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <Button
            Text="Add New Travel"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="OnAddNewTravelClicked" />
    </VerticalStackLayout>
</ContentPage>